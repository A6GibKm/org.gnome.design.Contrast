    "modules": [
        {
            "name": "contrast",
            "buildsystem": "meson",
            "sources": [{
                "type": "archive",
                "url": "https://gitlab.gnome.org/World/design/contrast/uploads/6206475dbea7620728457102365a7fe7/contrast-0.0.5.tar.xz",
                "sha256": "d0914975be6eaf77a14ebda2fed899c399fcdacad0cd0e0e81c7b1da2bed24a4"
